{
  "name": "fundflow-website",
  "version": "1.0.0",
  "description": "FundFlow - A Decentralized Accountability Hub for transparent fund tracking and trust building",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "start": "npm run start --workspace=server"
  },
  "keywords": [
    "blockchain",
    "transparency",
    "accountability",
    "ngo",
    "fund-tracking",
    "trust-score",
    "ai",
    "zero-knowledge-proofs"
  ],
  "author": "FundFlow Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
